{
  "name": "nano-component",
  "version": "1.0.0-3",
  "description": "Fast & simple React component styles in under 1kb",
  "main": "dist/index.js",
  "scripts": {
    "prepublish": "babel src -d dist",
    "start": "webpack-dev-server",
    "docs": "NODE_ENV=production webpack -p",
    "size": "npm run prepublish && bundlesize",
    "cover": "npm t && nyc report --reporter=html --reporter=lcov",
    "test": "nyc ava"
  },
  "keywords": [
    "react",
    "react-component",
    "style",
    "css-in-js"
  ],
  "author": "Brent Jackson",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "browser-env": "^3.1.0",
    "bundlesize": "^0.12.2",
    "nyc": "^11.0.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-live": "^1.7.0",
    "react-test-renderer": "^15.6.1",
    "styled-system": "^1.0.0-9",
    "tag-hoc": "^1.0.0-0",
    "theming": "^1.1.0",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.6.1"
  },
  "dependencies": {
    "prop-types": "^15.5.10"
  },
  "ava": {
    "require": [
      "babel-register",
      "./browser-env.js"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "test.js",
      "browser-env.js",
      "docs",
      "stories"
    ]
  },
  "bundlesize": [
    { "path": "dist/index.js" }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jxnblk/nano-component.git"
  },
  "bugs": {
    "url": "https://github.com/jxnblk/nano-component/issues"
  },
  "homepage": "https://github.com/jxnblk/nano-component#readme"
}
